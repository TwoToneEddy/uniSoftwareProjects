<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingTop="0dp"
    tools:context="com.example.progressiveoverload.EditWorkouts.EditWorkoutsDetailFragment" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2" >

        <TextView
            android:id="@+id/dayLabel"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="@string/dayLabelText"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/muscleGroupLabel"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:text="@string/muscleGroupLabelText"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/dayField"
            android:layout_column="1"
            android:layout_gravity="right|top"
            android:layout_row="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/muscleGroupField"
            android:layout_column="1"
            android:layout_gravity="right|top"
            android:layout_row="1"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </GridLayout>

    <Button
        android:id="@+id/addExerciseButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/addExerciseButtonText" />

    <ListView
        android:id="@+id/exerciseList"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/removeExerciseButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/removeExerciseButtonText" />


</LinearLayout>