<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingTop="0dp"
    tools:context="com.example.progressiveoverload.EditWorkouts.EditWorkoutsListFragment" >
    
	<ListView
	    android:id="@+id/workoutList"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
	    
    
    <Button
        android:id="@+id/createWorkoutButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/createWorkoutButtonText" />
    
    <Button
        android:id="@+id/removeWorkoutButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/removeWorkoutButtonText" />

</LinearLayout>
