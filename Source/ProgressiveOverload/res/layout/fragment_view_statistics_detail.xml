<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/dumbellss"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingTop="0dp"
    tools:context="com.example.progressiveoverload.ViewStatistics.ViewStatisticsDetailFragment" >
  
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="1" >

        <TextView
            android:id="@+id/selectedExerciseTextView"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />
     </GridLayout>
    
    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/graph" /> 
    
    <Button
        android:id="@+id/viewStatisticsFSButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/viewStatisticsFSButtonText" />
    
    
</LinearLayout> 